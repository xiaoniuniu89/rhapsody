<div class="scene-info">
  <span class="scene-name">{{sceneName}}</span>
  <div class="scene-actions">
    <button type="button" data-action="end-scene" class="end-scene">End Scene</button>
    <button type="button" data-action="new-scene" class="new-scene">New Scene</button>
    <button type="button" data-action="clear-history" class="clear-history" title="Clear all history (for testing)">
      <i class="fas fa-trash"></i> Clear History
    </button>
  </div>
</div>